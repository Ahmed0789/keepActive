{
    "manifest_version": 3,
    "name": "Keep Active",
    "version": "1.0",
    "description": "Keeps your browser active with periodic actions.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "alarms"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    }
}